{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make",
            "type": "shell",
            "command": "make",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build and Run",
            "type": "shell",
            "command": "./M2000",
            "args": [
                //"test/SAA5050.cas"
            ],
            "dependsOn": [
                "Make"
            ],
            "group": {
                "kind": "build",
                //"isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Make Libretro",
            "type": "shell",
            "command": "make -C src/libretro",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Copy Core info",
            "type": "shell",
            "command": "cp ./src/Libretro/info/m2000_libretro.info C:/RetroArch-Win64/info/",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Copy Core binary",
            "type": "shell",
            "command": "cp ./src/Libretro/m2000_libretro.dll C:/RetroArch-Win64/cores/",
            "group": "build",
            "dependsOn": [
                "Make Libretro"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build and Run RetroArch",
            "type": "shell",
            "command": "C:/RetroArch-Win64/retroarch.exe",
            "args": [
                "--verbose",
                "--set-shader", "shaders_slang/anti-aliasing/smaa.slangp",
                "-L", "m2000_libretro.dll",
                //"./test/games/Ghosthunt.cas"
                //"./test/SAA5050/SAA5050.cas"
            ],
            "dependsOn": [
                //"Copy Core info",
                "Copy Core binary"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}